        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body >
        <div  id="admingroup">
                <h1>Add Songs</h1>
                <%= typeof msg != 'undefined' ? msg: ' ' %>
                <%- messages('message', locals) %>
                   
            <div id="admin">
             
                <form action="/users/songs" method="POST"> 
                        <div class=" imggroup">
                            <script>var photo = "<%= photo %>";</script>
                               <div class="imgprev"> <img src="<%= (typeof photo != "undefined" ? photo : "") %>" id="photo"  name="photo" width="100" height="100" alt="Image preview..."/> </div><br>                          
                               
                               </div>
                            
                    <script>var name = "<%= name %>";</script>
                    
                    <label for="artiste"> Artiste</label>
                    <input  type="text" id="artiste" name="artiste" value="<%= name %>"/>
                                   
              
                </div>
                    <label for="song"> Stream Sources</label>
                    <p class="accordion">Sources</p>

                    <div class="panel">


                       <label for="song"> Song</label>
                      <p><input  type="text" id="song" name="song" /></p>

                        <label for="week"> Week</label>
                            <input  type="text" id="week" name="week" />

                            <label for="song"> Source</label>
                            <p><input  type="text" id="source" name="source" /></p>
      
                            <label for="rating"> Rating</label>
                                <input  type="text" id="rating" name="rating" />
                    </div>
                    <button type="submit" class="compbtn"value="Save" name="Save" title="add more songs" > Update </button>
                    
                    <a class="compbtn" href="/users/admin"  title="create new artiste"> Create </a>
                    
                       <a class="compbtn" href="/users/Menu " title="main menu"> Menu </a>
                      
                </form>
               
        </div>
        
        <script src="/javascript/index.js" type="text/javascript"></script>
        
    </body>
</html>
